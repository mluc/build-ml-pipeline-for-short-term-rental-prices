name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Fully qualified name of the raw dataset artifact to be cleaned
        type: string

      output_artifact:
        description: Name for the cleaned dataset artifact to be created
        type: string

      output_type:
        description: Type for the cleaned dataset artifact
        type: string

      output_description:
        description: Short description for the cleaned dataset artifact
        type: string

      min_price:
        description: The minimum price to consider (rows with smaller price will be dropped)
        type: float

      max_price:
        description: The maximum price to consider (rows with larger price will be dropped)
        type: float


    command: >-
        python run.py --input_artifact {input_artifact} --output_artifact {output_artifact} --output_type {output_type} --output_description {output_description} --min_price {min_price} --max_price {max_price} 
